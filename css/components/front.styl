.section-title {
    margin-bottom: 20px;
}      

.click-game {
    i {
        transition: transform .4s ease;
    }  
} 
.showGame {
    i {
        transform: rotate(90deg);
    }
}

.title-paginate {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    display: flex;
    form {
        min-width: 180px;
        width: auto;
    }
}

